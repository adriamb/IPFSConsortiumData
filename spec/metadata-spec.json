{
	"$id": "http://datapinner.com/metadata-spec.json",
	"definitions": {
		"ecsignature": {
			"properties": {
				"s": {
					"$id": "/properties/s",
					"type": "string"
				},
				"r": {
					"$id": "/properties/r",
					"type": "string"
				},
				"v": {
					"$id": "/properties/v",
					"type": "integer"
				}
			},
			"required": [
				"s",
				"r",
				"v"
			]
		},
		"addmember": {
			"properties": {
				"type": {
					"$id": "/properties/type",
					"type": "string",
					"title": "addmember type",
					"const": "addmember"
				},
				"member": {
					"$id": "/properties/member",
					"type": "string",
					"title": "pubkey of the member"
				},
				"signature": {
					"type": "object",
					"$ref": "#/definitions/ecsignature"
				}
			},
			"required": [
				"type",
				"member",
				"signature"
			]
		},
		"removemember": {
			"properties": {
				"type": {
					"$id": "/properties/type",
					"type": "string",
					"title": "removemember type",
					"const": "removemember"
				},
				"member": {
					"$id": "/properties/member",
					"type": "string",
					"title": "pubkey of the member"
				},
				"signature": {
					"type": "object",
					"$ref": "#/definitions/ecsignature"
				}
			},
			"required": [
				"type",
				"member",
				"signature"
			]
		},
		"parameters": {
			"properties": {
				"type": {
					"$id": "/properties/type",
					"type": "string",
					"title": "manifest type",
					"const": "parameters"
				},
				"capacity": {
					"$id": "/properties/capacity",
					"type": "string",
					"title": "storage quotum for this consortium"
				},
				"governancethreshold": {
					"$id": "/properties/governancethreshold",
					"type": "integer",
					"title": "amount of validators to confirm governance functions"
				}
			},
			"required": [
				"type",
				"capacity"
			]
		},
		"manifest": {
			"properties": {
				"type": {
					"$id": "/properties/type",
					"type": "string",
					"title": "manifest type",
					"const": "manifest"
				},
				"ttl": {
					"$id": "/properties/ttl",
					"type": "integer",
					"title": "TTL for these hashes, in s",
					"default": 0
				},
				"hashes": {
					"$id": "/properties/hashes",
					"type": "array",
					"items": {
						"$id": "/properties/hashes/items",
						"type": "string",
						"minLength": 46,
						"maxLength": 46,
						"title": "IPFS hash"
					}
				}
			},
			"required": [
				"type",
				"hashes"
			]
		}
	},
	"type": "object",
	"anyOf": [{
		"$ref": "#/definitions/manifest"
	}, {
		"$ref": "#/definitions/parameters"
	}, {
		"$ref": "#/definitions/addmember"
	}, {
		"$ref": "#/definitions/removemember"
	}]
}
